@model HomePageViewModel

@{
    ViewData["Title"] = "Anasayfa";
}

<partial name="_Carousel" model="Model.Carousels" />

@section Scripts{
    <script>
        $(".carousel-item:first").addClass("active")
        $(".carousel-indicators button:first").addClass("active")
    </script>
}

<!-- Header-->
<header class="bg-light py-3 mt-5">
    <div class="container px-4 px-lg-5 my-2">
        <div class="text-center text-dark">
            <h4 class="display-9 fw-bolder">  Sizin İçin Seçtiklerimiz   </h4>
           @* <p class="lead fw-normal text-white-50 mb-0">Sizin için seçtiklerimiz</p>*@
        </div>
    </div>
</header>

<partial name="_Products" model="Model.Products" />

<!-- Header-->
<header class="bg-light py-3 mt-5">
    <div class="container px-4 px-lg-5 my-2">
        <div class="text-center text-dark">
            <h4 class="display-9 fw-bolder">  Markalar  </h4>
           @* <p class="lead fw-normal text-white-50 mb-0">En iyi markalar burada</p>*@
        </div>
    </div>
</header>

<div class="row mt-2">
    @foreach (var item in Model.Brands)
    {
        <div class="col">
            <a asp-controller="Brands" asp-action="Index" asp-route-id="@item.Id">
                <img src="/Img/@item.Logo" alt="@item.Name" title="@item.Name" height="60" />
            </a>
        </div>
    }
</div>
